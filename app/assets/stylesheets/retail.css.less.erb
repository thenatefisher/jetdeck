@import 'twitter/bootstrap/bootstrap';
@import 'twitter/bootstrap/responsive';

body {
  background: url(<%= asset_path 'bg/retina_wood.png' %>) repeat;
}

.whitebox {
  background: #FFFFFF;
  .border-radius(6px);
  .container-fixed();
  .center-block();
  .clearfix();
  padding: 10px 30px; 
  margin: 15px auto;
}

.company-banner {
  .whitebox;
  .border-radius(0 0 6px 6px);
  .clearfix;
  padding-top: 5px;
  padding-bottom: 10px;
  margin-top: 0px;
}

.agent-name-phone {
  margin-top: 10px; 
  margin-left: 10px;
  .pull-left;
}

.company-logo {
  max-height: 70px;
}

.company-logo.has-website { 
  margin-top: 20px 
}

.company-name {
  .pull-left; 
  color: black;
}

.agent-info {
  float: right;
  text-align: right;
}

#retail-unit {
  .whitebox;
  padding-bottom: 0px;
  .clearfix;
  padding-top: 30px;
}

#retail-unit h1 {
  font-size: 40px;
  margin-top: 20px;
  .clearfix;
}

.asking-price {
  margin-top: 5px;
  font-size: 15px;
}

.contact {
  margin-bottom: 10px;
}

.hero-list {
  margin-top: 30px;
  margin-bottom: 20px;
  list-style: disc;
  font-size: 20px;
}

.hero-list li h3 { 
  line-height: 20px;
}

.hero-list li {
  margin-bottom: 15px;
}

.hero-list li:last-child {
  margin-bottom: 0px;
}

.broker-message {
  margin: -30px -30px;
  margin-bottom: 30px;
  .border-radius(6px 6px 0 0);
}

#dont-show-again {
  float: right; 
  margin-top: 7px; 
  margin-right: -15px;
}

#dont-show-again:after { 
  clear: both 
}

#dont-show-again input {
  margin-right: 5px; 
  margin-top: 0px;
}

.gallery img {
  .border-radius(6px);
  max-height: 300px;
}

.gallery {
  overflow: none;
  margin-bottom: 30px;
  margin: 0px auto;
}

.gallery li {
  .hide;
}

.gallery li:first-child {
  .show;
}

#spec-detail {
  .whitebox;
  .clearfix;
}

#footer {
  .pull-right;
  margin: 20px;
}
    
/* Large desktop */
/* preview img 400x300 */
@media (min-width: 1200px) { 

  .container { 
    width: 1000px; 
  }

}

/* Portrait tablet to landscape and desktop */
/* preview img 265x300 */
@media (min-width: 768px) and (max-width: 979px) {

  #retail-unit {
    padding: 20px 10px;
  }
  
  .broker-message {
    margin: -20px -10px;
    margin-bottom: 10px;
  }  
  
  #retail-unit h1 {
    margin-top: 10px;
    .clearfix;
  }

  .contact {
    margin-top: 20px;
  }

}

/* Landscape phone to portrait tablet */
@media (max-width: 767px) {

  #retail-unit {
    padding: 10px 10px;
    margin-top: 5px;
  }
  
  .broker-message {
    margin: -10px -10px;
    margin-bottom: 10px;
  }  
  
  #retail-unit h1 {
    margin-top: 10px;
    .clearfix;
  }
  
  .broker-message {
    margin-bottom: 0px;
  }    
  
  .contact {
    margin: 0px auto;
  }

  .company-banner-phone {
    padding: 0px;
    margin: 0px;
    margin-top: 5px;
  }

}

