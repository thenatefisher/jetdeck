@import "twitter/bootstrap/bootstrap";
@import "twitter/bootstrap/responsive";
@iconSpritePath: asset-path('/assets/glyphicons-halflings.png');
@iconWhiteSpritePath: asset-path('/assets/glyphicons-halflings-white.png');
@fontAwesomeEotPath:  'font/fontawesome-webfont.eot';
@fontAwesomeWoffPath: 'font/fontawesome-webfont.woff';
@fontAwesomeTtfPath:  'font/fontawesome-webfont.ttf';
@fontAwesomeSvgzPath: 'font/fontawesome-webfont.svgz';
@fontAwesomeSvgPath:  'font/fontawesome-webfont.svg';
@import "fontawesome";

body {
  margin: 0px;
  background: url(<%= asset_path 'bg/noisepattern.png' %>) repeat;
}

.hero-unit h1 {
  font-size: 40px;
  margin-top: 20px;
}

.hero-image {
  width: 400px;
  overflow: hidden;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
  cursor: pointer;  
}

.hero-list {
  margin: 30px 0 0 0;
  list-style: none;
  
}

.item {
  height: 300px;
}

.hero-list li {
  height: 35px
}

.whitebox {
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  border-radius: 6px;
  background: white;
}

.carousel-control {
  top: 50%
}

.company-banner {
  margin-bottom: 30px;
}

.company-banner div.whitebox {
  -webkit-border-top-right-radius: 0px;
  -webkit-border-top-left-radius: 0px;
  -moz-border-radius-topright: 0px;
  -moz-border-radius-topleft: 0px;
  border-top-right-radius: 0px;
  border-top-left-radius: 0px;
}

.hero-image-float {
  float: right;
}

#hero-carousel {
  width: 400px;
  margin: 0 auto;
}

.company-logo {
  margin: 10px 20px; 
  max-height: 70px;
}

.company-name {
    margin: 30px 20px;
    float: left;
}

@media (min-width: 768px) and (max-width: 979px) {

  .hero-image-float {
    float: none;
  }
  .hero-text-data {
    width: 100%;
  }
}

@media (max-width: 767px) {

  #message-seller {
    display: none;
  }

  .company-logo {
    width: 150px;
    margin: 20px 20px;
    height: auto;
  }

  .hero-image-float {
    float: none;
  }

  .hero-text-data {
    width: 100%;
  }
}

@media only screen and (max-width: 540px) {

  .print-spec, #message-seller, .company-logo, .broker-message {
    display: none;
  }

  .hero-image-float {
    float: none;
  }

  .hero-text-data {
    width: 100%;
  }

  .spec-data {
    margin: 0px;
    width: 100%
  }

  .hero-list li {
    height: 60px
  }

  #hero-carousel {
    width: 300px;
    height: auto;
    margin: 0 auto;
  }



}
