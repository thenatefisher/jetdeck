@import "twitter/bootstrap/variables";
@import "twitter/bootstrap/mixins";

/* document body */
body {
  padding-top: 10px;
  background: whiteSmoke;
  color: #2C3E50;
}

/* application mode body */
#whitebox {
  border: 1px solid #ccc; 
  margin: 0px; 
  padding: 0px;
  background: #fff;
}

 /* footer */
.footer {
  font-size: 14px;
  color: #9999aa;
  line-height: 20px;
  text-align: right; 
  margin: 20px;
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
}

.dark_color { color: #999 }

a {color: rgb(41, 127, 170);}
a.labelLink:hover {text-decoration :none; }
a.thumbnail:hover {text-decoration :none; }

h3 i {
  margin-top: 4px;
}

h4 i {
  margin-top: 2px;
}

.caption, .caption h5 { 
  font-size: 12px; 
  line-height: 10px;
}

/* generic error colors */
.error { color: @red; }
