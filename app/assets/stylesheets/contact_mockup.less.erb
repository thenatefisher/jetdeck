@import "twitter/bootstrap/variables";
@import "twitter/bootstrap/mixins";

/* document body */
body {
  padding-top: 10px;
  background: url(<%= asset_path 'bg/dots.png' %>) repeat;
}

/* application mode body */
#whitebox {
  border: 1px solid #ccc; 
  -webkit-border-radius: 4px; 
  -moz-border-radius: 4px; 
  border-radius: 4px; 
  margin:0px; 
  background: #fff;
}

/* override bootstrap breadcrumb for section titles */
.breadcrumb {
  padding: 4px 15px;
}
.breadcrumb.subsection {
  background: #D9EDF7;
}

/* make link-like */
.clicky { cursor: pointer; }
 
 /* footer */
.footer {
  font-size: 14px;
  color: #9999aa;
  line-height: 20px;
  text-align: center; 
  margin: 20px;
}

/* jquery uploader */
#uploader { margin-top: 40px; }

/* darken placeholder */
@placeholderText: #cfcfcf;
input:-moz-placeholder {
  color: #cfcfcf;
}

/* generic error colors */
.error { color: @red; }

.edit-group .error {
  margin-top: 8px;
  margin-left: 5px;
  float: right;
  font-size: 18px;
}

.small > .pagination a {
  padding: 0px 6px;
  line-height: 19px;
}

.dark_color { color: #999 }

a {color: #0074CC;}
a.labelLink:hover {text-decoration :none; }
a.thumbnail:hover {text-decoration :none; }

h3 i {
  margin-top: 4px;
}

h4 i {
  margin-top: 2px;
}

.btn i {
  margin-top: 2px;
}

.btn-large i {
  padding-top: 2px;
  margin-right: 4px;
}

.partial-header {
  background: @btnBackgroundHighlight;
  .border-radius(4px);
  padding: 5px;
  margin: 10px 0;
}

.large-line-height { line-height: 27px; }

.table-input-margin { margin: 5px 0px; }