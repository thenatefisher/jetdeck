<div class="modal-header">

  <a class="close" data-dismiss="modal">x</a>

  <h3>Manage Airframe Equipment</h3>
  <p>Select the equipment currently on-board this airframe</p>
</div> <!-- modal header -->

<div class="modal-body">

     <form id="equipment-form" method=POST>
        <select multiple="multiple" class="multiselect span3" id="avail-parts">

          <optgroup label="Avionics">
  <% for (var i = 0; i < avionics.length; i++) { %>
  <% if (i % 2 == 0) { %>          
            <option value="<%= avionics[i].id %>"><%= avionics[i].label %>: <%= avionics[i].make %> <%= avionics[i].model %></option>
  <% }} %>            
          </optgroup>
        

        </select>
      </form>

</div> <!-- modal body -->

<div class="modal-footer"></div> <!-- modal footer -->

