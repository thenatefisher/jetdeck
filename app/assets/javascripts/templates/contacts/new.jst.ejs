<form id="new-contact" name="contact">
  <div class="modal-body" style="padding-left: 50px;">

    <br/>
    <div class="control-group name_group">
      <label for="registration" style="clear: both; color: #000"><h4>Contact Name</h4></label>
      <input class="pull-left span3" type="text" name="first" id="first" value="" placeholder="First">
      <input class="pull-left span3" type="text" name="last" id="last" value="" style="margin-left: 20px" placeholder="Last">
      <p class="help-block pull-left hide" style="margin-top: 4px; margin-bottom: 10px;">Either First or Last Name Required</p>
    </div>
    <div style="clear: both"></div>

    <div class="control-group span6 email_group" style="margin-top: 0px; margin-left: 0px">
      <label for="registration" style="clear: both; color: #000"><h4>Email <small>(required)</small></h4></label>
      <input class="pull-left span6" type="text" name="email" id="email" value="" placeholder="">
      <p class="help-block pull-left hide" style="margin-top: 4px; margin-bottom: 0px;"></p>
    </div>

  </div>
</form>

<div class="modal-footer">
<a href="#" class="btn" data-dismiss="modal">Cancel</a>
