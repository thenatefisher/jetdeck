  <div class="span2">

      <div class="main-thumbnail profile-main-thumbnail">
        <div><img src="/assets/missing.png" /></div>
      </div>

      <table class="profile-stats">
          <thead>
            <tr>
                <th></th>
            </tr>
          </thead>
          <tbody>
          <tr>
            <td style="border-top: 0px; padding: 25px 0">
                <h2 style="color: #aaa"><%= airframes %></h2>
                <small style="color: #aaa">Aircraft </small>
            </td>
          </tr>
          <tr>
            <td style="padding: 25px 0">
                <h2 style="color: #aaa"><%= contacts %></h2>
                <small style="color: #aaa">Contacts </small>          
            </td>
          </tr>
          <tr>
            <td style="padding: 25px 0">
                <h2 style="color: #aaa"><%= sent %></h2>
                <small style="color: #aaa">Specs Sent </small>          
            </td>          
          </tr>
          <tr>
            <td style="padding: 25px 0">
                <h2 style="color: #aaa"><%= views %></h2>
                <small style="color: #aaa">Spec Views </small>          
            </td>           
          </tr>
          </tbody>
      </table>

  </div>
  
  <div class="offset2">
     
      <div class="span7" id="profile_name_edit">

         <input type="text"
                class="inline-edit profile_field span3"
                name="first"
                value="<%= contact.first %>"
                style="line-height: 35px"
                placeholder="First Name" />
         
         <input type="text"
                class="inline-edit profile_field span4"
                style="float: right; line-height: 35px"
                name="last"
                value="<%= contact.last %>"
                placeholder="Last Name" />

        <input type="text"
              class="inline-edit profile_field span7"
              value="<%= contact.title %>"
              name="title"
              placeholder="Title" />
      
        <input type="text"
              class="inline-edit profile_field span7"
              value="<%= contact.company %>"
              name="company"
              placeholder="Company Name" />
      
      </div>

      <div class="row">
      
        <div id="profile_settings" class="span7" style="margin: 70px 0 40px 40px">
              <table>
                  <tbody>
                      <tr>
                          <td>
                              <div class="profile-header-label span3">Account Type</div>
                          </td>
                          <td>
                              <div style="margin-left: 25px;">Beta / Trial</div>
                          </td>
                      </tr>
                      
                      <tr>
                          <td>
                              <div class="profile-header-label span3">Phone Number</div>
                          </td>
                          <td>
                              <input  type="text"
                                      style="float:right" 
                                      class="inline-edit span4"
                                      value="<%= contact.phone %>"
                                      name="phone"
                                      placeholder="Phone Number" />
                              <div style="text-align: right; 
                                          margin: -5px 0 0 0; 
                                          float: right;
                                          color: #777">
                              Number will be visible to customers as-entered.
                              </div>                                            
                          </td>
                      </tr>   
                          
                      <tr>
                          <td>
                              <div class="profile-header-label span3">Website</div>
                          </td>
                          <td>
                              <div class="input-prepend pull-right">
                                <span class="add-on">http://</span><input 
                                        type="text"
                                        class="inline-edit"
                                        style="width: 240px"
                                        value="<%= contact.website.replace('http://', '') %>"
                                        name="website"
                                        placeholder="www.website.com" />
                            
                               </div>
                               <span for="website" 
                                      class="help-inline error pull-right"></span> 
                          </td>
                      </tr> 
                                                              
                      <tr>
                          <td>
                              <div class="profile-header-label span3">Email Address</div>
                          </td>
                          <td>
                              <input  type="text"
                                      style="float:right" 
                                      class="inline-edit span4"
                                      value="<%= contact.email %>"
                                      name="email"
                                      placeholder="Email Address" />
                           
                              <input  type="text"
                                      style="float:right" 
                                      class="inline-edit span4"
                                      name="email_confirmation"
                                      placeholder="Confirm New Email" />
                       
                               <span for="email" 
                                      class="help-inline error pull-right"></span> 
       
                          </td>
                      </tr>    
                                    
                      <tr>
                          <td>
                              <div class="profile-header-label span3">Password</div>
                          </td>
                          <td>
                              <input  type="password"
                                      style="float:right" 
                                      class="inline-edit span4"
                                      name="password"
                                      placeholder="New Password" />
                            
                              <input  type="password"
                                      style="float:right" 
                                      class="inline-edit  span4"
                                      name="password_confirmation"
                                      placeholder="Confirm New Password" />
                                      
                               <span for="password" 
                                      class="help-inline error pull-right"></span>
                          </td>
                      </tr>                  
                  
                      <tr>
                          <td>
                              <div class="profile-header-label span3">Logo</div>
                          </td>
                          <td>
                          
                              <% if (typeof(logo) != "undefined" && logo != null) { %> 
                                  <div class="span4" style="float: right; margin-bottom: 20px;">
                                    <img style="float:right" src="<%= logo %>">

                                  </div>
                              <% } %>
                              
                              <div id="logo-help" style="text-align: right; 
                                          margin-top: -10px; 
                                          float: right;
                                          width: 200px;
                                          color: #777">
                              Logo will be visible to customers.
                              </div>
                                                                  
                              <form method="POST" action="/user_logos" enctype="multipart/form-data">
                                
                                <input type="file" 
                                        id="logo" 
                                        name="image"
                                        style="display: none" />  
                                
                                <% if (typeof(logo) != "undefined" && logo != null) { %> 
                                <button style="float:right; margin-left: 20px" 
                                        id="delete"
                                        class="btn span2">Delete Logo</button> 
                                <% } %>
                                                                                
                                <button style="float: right; margin-left: 20px"
                                        onclick="return false"
                                        id="upload"
                                        class="btn span2">Select Logo</button>   
                                                                                                                                                 
                              </form>
                              
                          </td>
                      </tr>                  
                  </tbody>
              </table>
              </div>
        
      </div>

  </div> <!-- offset2 -->
