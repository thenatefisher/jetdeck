<h1>Listing credits</h1>

<table>
  <tr>
    <th>User</th>
    <th>Creditable type</th>
    <th>Creditable</th>
    <th>Amount</th>
    <th>Direction</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @credits.each do |credit| %>
  <tr>
    <td><%= credit.user %></td>
    <td><%= credit.creditable_type %></td>
    <td><%= credit.creditable_id %></td>
    <td><%= credit.amount %></td>
    <td><%= credit.direction %></td>
    <td><%= credit.description %></td>
    <td><%= link_to 'Show', credit %></td>
    <td><%= link_to 'Edit', edit_credit_path(credit) %></td>
    <td><%= link_to 'Destroy', credit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

