<% if flash[:notice] %>
  <div class="alert alert-success" id="jetdeck-notification" style="margin: 10px;">
    <button class="close" data-dismiss="alert">Ã—</button>
    <div class="notification-content"></div>
  </div>
  <script type="text/javascript">$(function() { alertSuccess("<%= flash[:notice] %>"); });</script>
<% end %>   

<div style="padding: 20px; padding-bottom: 0px">

    <form class="form-horizontal login" method="POST" action="/authenticate">

          <div class="control-group <% if flash[:error] %> error <% end%>">

              <label class="control-label" for="email">Email</label>
              <div class="controls">
                <input
                  class="span5 focused"
                  id="email"
                  name="email"
                  type="text"
                  value="<%= flash[:email] if flash[:email] %>" />
              </div><br>

              <label class="control-label" for="password">Password</label>
              <div class="controls">
                <input class="span5 focused" id="password"
                        name="password" type="password" value="" />

                <% if flash[:error] %>
                <span class="help-inline" style="margin-top: 10px">

                        <%= flash[:error] %>
                        <a href="/password_resets">
                        Forgot Your Password?</a>

                </span>
                <% else %>

                <div style="margin-top: 10px">
                   <input type="checkbox" name="remember_me" checked /> 
                   <span>Remember Me</span>
                </div>  
                
                <% end %>
                              
              </div>

          </div>

          <div class="pull-right login">
              <span><a href="http://www.jetdeck.co/#features">Learn More!</a></span>
              <input style="margin-top: -5px; margin-left: 10px;" 
                        type="submit" 
                        class="btn btn-primary" 
                        value="Log In" />
          </div>

          <div class="clearfix"></div>

    </form>

</div>
