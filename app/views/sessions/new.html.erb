<% if flash[:notice] %>
  <div class="alert alert-success" id="jetdeck-notification" style="margin: 10px;">
    <button class="close" data-dismiss="alert">Ã—</button>
    <div class="notification-content"></div>
  </div>
  <script type="text/javascript">$(function() { alertSuccess("<%= flash[:notice] %>"); });</script>
<% end %>   

<div style="padding: 20px; padding-bottom: 0px">

    <form class="login" method="POST" action="/authenticate">

          <table style="width: 100%">

            <tr>
              <td>Email</td>
              <td>
                <input
                  class="focused pull-right"
                  id="email"
                  name="email"
                  type="text"
                  value="<%= flash[:email] if flash[:email] %>" />    
              </td>
            </tr>
            
            <tr>
               <td>Password</td>
               <td>
                  <input class="focused pull-right" id="password"
                          name="password" type="password" value="" />
                </td>  
            </tr>
            
            <tr>
                
                 <td colspan=2>

                  <div class="pull-right">
                  <% if flash[:error] %>
                        <div style="color: red">
                        <%= flash[:error] %>
                        <a href="/password_resets">
                        Forgot Your Password?</a>
                        </div>
                  <% else %>
                   <input type="checkbox" name="remember_me" checked /> 
                   <span>Remember Me</span>
                  <% end %>  
                  </div>

                </td>  

            </tr>
            
            <tr>
              <td colspan=2>
                <br>
                <div class="pull-right">
                    <span><a href="http://www.jetdeck.co/#features">Learn More!</a></span>
                    <input type="submit" 
                           class="btn btn-primary" 
                           value="Log In" />
                </div>
              </td>
            </tr>
            
          </table>
          <div class="clearfix"></div>
    </form>

</div>
