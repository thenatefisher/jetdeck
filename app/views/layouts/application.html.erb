    </head>

    <body>
    
      <div class="sweatband"></div>
    
      <div class="container">

        <div class="navbar row">

              
                <div class="span12">
                  <a class="brand" style="" href="/"><img src="/assets/logo_black_no_tag.png"></a>
                  
                  <div class="pull-right username">

                        Welcome, 
                        
                        <a href="/profile">

                            <% if current_user %>
                              <strong><%= current_user.contact.first %> <%= current_user.contact.last %></strong>
                            <% end %>

                        </a>
                    
                        | <a href="/logout">Log Out</a>

                    </div>
                  </div>


        </div> <!-- navbar navbar-fixed-top -->

        <div class="row" style="padding: 0px 0px 10px;">

                  <div class="btn-group pull-right" style="margin: 10px 20px 0 0;">
                    <button class="btn new-spec"><i class="icon-plane icon-white"></i> New Spec </button>
                    <button class="btn new-contact"><i class="icon-user icon-white"></i> New Contact </button>
                  </div>

                  <!--<div class="btn-toolbar btn-group pull-right" style="margin: 10px 20px 0 0;">
                    <button class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#">
                      <i class="icon-plus icon-white"></i> New
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" style="left: auto">
                      <li><a class="new-spec" href="#" onclick="return false;"><i class="icon-plane"></i> New Spec</a></li>
                      <li><a class="new-contact" href="#" onclick="return false;"><i class="icon-user"></i> New Contact</a></li>
                    </ul>
                  </div>-->


                  <!--<form class="navbar-search pull-right" action="">
                    <input type="text" class="jui-autocomplete input-xlarge" placeholder="Find an aircraft or contact" style="margin: 4px 10px;"></input>
                  </form>-->


        </div> <!-- end row class for search bar and new spec/contact-->

        <div class="row">

          <!-- notification message placeholder -->
          <div class="alert alert-success span5" id="jetdeck-notification">
            <button class="close" data-dismiss="alert">×</button>
            <div class="notification-content"></div>
          </div>
          <div class="alert alert-error span5" id="jetdeck-notification-error">
            <button class="close" data-dismiss="alert">×</button>
            <div class="notification-content"></div>
          </div>
          
          <div class="span2">
          
            <br/>
            <ul class="left-nav nav nav-list">
            
              <li>
                <a href="/airframes"> <h3> <i class="icon-th-list"></i> My Deck </h3> </a>
              </li>

              <li>
                <a href="/contacts"> <h3> <i class="icon-book"></i> Contacts </h3></a>
              </li>

            </ul>
            
          </div> <!-- end MY DECK ... navigation -->

        <div class="span10" style="border: 1px solid #ccc; -webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px; margin:0px; background: #fff;">

            <div style="margin-top: 20px;"></div>

            <%= yield %>

        </div> <!-- span10 entire spec (White background) -->

      </div> <!-- end main row -->


        <div class="span12 footer"><p>© <%=  Time.now.year %>, JetDeck Services, LLC </p></div>


      </div> <!-- end container class -->

    <div class="modal fade" id="jetdeckModal"></div> <!-- modal container place holder -->

    </body>
</html>
