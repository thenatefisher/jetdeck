            </div><!-- /navbar-inner -->

        </div> <!-- navbar navbar-fixed-top -->

        <div class="row" style="padding: 0px 0px 10px;">

                  <div class="btn-group pull-right" style="margin: 10px 20px 0 0;">
                    <button class="btn btn-primary new-spec"><i class="icon-plane icon-white"></i> New Spec</a></button>
                    <button class="btn btn-primary new-contact"><i class="icon-user icon-white"></i> New Contact</a></button>
                  </div>

