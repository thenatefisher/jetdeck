    <body>
      <div class="container">

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
              <div class="container">

                <a class="brand" style="margin-left: 15px; margin-top: -9px; position: absolute;" href="/"><img src="/assets/logo.png"></a>

                <div class="nav-collapse">

                  <ul class="nav pull-right" style="margin-right: 15px;">
                    <!--<li><a href="#">Help</a></li>-->
                    <li class="divider-vertical"></li>
                    <li class="dropdown id="nav-username">

                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">

                          <% if current_user %>
                            <%= current_user.contact.first %> <%= current_user.contact.last %> <b class="caret"></b>
                          <% end %>

                      </a>
                      <ul class="dropdown-menu">
                        <li><a href="/profile">Edit Profile</a></li>
