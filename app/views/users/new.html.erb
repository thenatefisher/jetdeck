
<h4>Start a Free Individual Account Now!</h4>

<h4><br></h4>

<% if flash[:alert] %>
  <div class="alert alert-error span12" style="margin-left: 0px;">
    <div><%= flash[:alert] %></div>
  </div>
  <div style="clear: both"></div>
<% end %> 
  
<%= form_tag "/users" do %>

  <div class="control-group clearfix">
  <div class="controls">
  <input type="text" class="span12" name="name" value="<%= @name %>" placeholder="First and Last Name">
  <span class="help-inline pull-right"></span>
  </div>
  </div>
  
  <div class="control-group clearfix">
  <div class="controls">
  <input type="text" class="span12" value="<%= @email %>" name="email" placeholder="Email">
  <span class="help-inline pull-right"></span>
  </div>
  </div>
  
  <div class="control-group clearfix">
  <div class="controls">
  <input type="password" class="span12" name="password" placeholder="Password">
  <span class="help-inline pull-right "></span>
  </div>
  </div>
    
  <input type="hidden" class="span12" name="token" value="<%= @token %>">
    
<% end %>

  <div class="control-group clearfix">
  <div class="controls">
  <label class="checkbox">
  <input type="checkbox"> I have read and agree to the <a href="http://www.jetdeck.co/priv.php">Privacy Policy</a> as well as the <a href="http://www.jetdeck.co/tos.php">Terms and Conditions</a>.
  </label>
  <span class="help-inline pull-right"></span>
  </div>
  </div>

<button class="btn btn-primary pull-right btn-large" id="signup"><strong>Sign Up</strong></button>

<h4><br><br></h4>
